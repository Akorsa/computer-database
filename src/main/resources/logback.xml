<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{0}:%L - %m%n</pattern>
		</encoder>
	</appender>
	
	<appender name="daily" class="ch.qos.logback.core.RollingFileAppender">
		<file>${catalina.base}/logs/spec-cdb</file>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>spec-cdb.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!--<maxHistory>10</maxHistory>-->
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{0}:%L - %m%n</pattern>
	    </encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="console"/>
	</root>

</configuration>
