        <form-login/>
        <logout/>
    </http>
    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="admin" password="admin" authorities="ROLE_DEFAULT, ROLE_ADMIN"/>
                <user name="martin" password="martin" authorities="ROLE_DEFAULT"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>

